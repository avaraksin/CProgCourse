@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Logist</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">

    <nav class="flex-column">
     @if (clnum == 2)
     {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
     }

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="mudpage" >
                <span class="oi oi-list-rich" aria-hidden="true"></span> Mud Справочники
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Listnamedata">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Справочники (стандарт)
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private static int clnum { get; set; }

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    
    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    public static void SetClNum(int clientnumber)
    {
        clnum = clientnumber;
    }

    protected override void OnInitialized() => AppStatus.OnChange += StateHasChanged;
    public void Dispose() => AppStatus.OnChange -= StateHasChanged;
}
